<Window x:Class="Losoowanie.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="900"
        Background="#f7eac1">

    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Width" Value="120"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="Background" Value="#f7dc63"/>
            <Setter Property="BorderBrush" Value="#dbb91f"/>
            <Setter Property="BorderThickness" Value="4"/>
            <Setter Property="FontSize" Value="15"/>
        </Style>
    </Window.Resources>

    <Grid Margin="100 0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="100"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <StackPanel>
            <Border BorderBrush="#bf0000" Margin="0 20" BorderThickness="4" CornerRadius="20">
                <StackPanel Orientation="Horizontal" Margin="20" HorizontalAlignment="Center">
                    <Image Width="70" Height="70" Margin="10" Source="{x:Null}"/>
                    <Image Width="70" Height="70" Margin="10" Source="{x:Null}"/>
                    <Image Width="70" Height="70" Margin="10" Source="{x:Null}"/>
                    <Image Width="70" Height="70" Margin="10" Source="{x:Null}"/>
                    <Image Width="70" Height="70" Margin="10" Source="{x:Null}"/>
                </StackPanel>
            </Border>
        </StackPanel>

        <Button Grid.Column="1" Content="Losuj"/>

        <StackPanel Margin="0 0 0 20" Grid.Row="1" Grid.ColumnSpan="2" HorizontalAlignment="Center" Orientation="Horizontal">
            <DataGrid Margin="0 0 20 0" AutoGenerateColumns="False" Width="400" CanUserAddRows="False">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Rzut" Width="60"/>
                    <DataGridTextColumn Header="Wylosowane oczka" Width="200"/>
                    <DataGridTextColumn Header="Suma pkt" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>

            <StackPanel Grid.Row="1" Grid.Column="1">
                <Label Content="Suma punktów" Foreground="#bf0000" FontSize="20" FontWeight="Bold"/>
                <Label FontSize="24" FontWeight="Bold" Content="0" HorizontalAlignment="Center"></Label>
            </StackPanel>
        </StackPanel>

        <StackPanel Grid.Row="2" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="Nowa gra" Margin="0 0 50 0"/>
            <Button Content="Zapisz wynik"/>
        </StackPanel>
    </Grid>
</Window>